    "version": "0.2.0",
    "configurations": [
        {
            "name": "Serve with Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "preLaunchTask": "serve-xdebug",
            "postDebugTask": "kill-xdebug",
            "ignore": [
                "**/app/helpers.php",
                "**/vendor/**/*.php"
            ]
        }
    ]
}
